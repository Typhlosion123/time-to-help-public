{
  "name": "Time 2 Help",
  "description": "Track your browsing time and donate to charity based on your usage.",
  "version": "2.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "time-2-help-x16.png",
      "48": "time-2-help-x48.png",
      "128": "time-2-help.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "time-2-help-x16.png",
    "48": "time-2-help-x48.png",
    "128": "time-2-help.png"
  }
}